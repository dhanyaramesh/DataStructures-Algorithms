package hackerRank;

public class spiralAnd90matrix {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		int[][] m = new int[3][3];
		int x=0,y=0,val=1,step=0,n=3;
		for(val=1;val < n*n;){
			while(y+step < n){
				System.out.println("here " + x + " " + y +" "+ m[x][y]);
				m[x][y]=val++;
				y++;
			}
			//y--;
			x++;
			System.out.print("after 1st while");
			y--;
			while(x+step<n){
				m[x][y-1]=val++;
				x++;
			}
			x--;
			y--;
			
			while(y>=0+step+n){
				m[x][y]=val++;
				y--;
			}
			y++;
			x--;
			
			step++;
			
			while(x>=0+step+n){
				m[x][y]=val++;
				x--;
			}
			x++;
			y--;
			
		}
		
		
		/*for(int i=0;i<n;i++){
			for(int j=0;j<n;j++){
				System.out.print(m[i][j] + " ");
			}
			System.out.println();
		}*/
		

	}

}
